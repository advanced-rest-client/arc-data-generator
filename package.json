    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "chance": "^1.1.4",
    "pouchdb": "^7.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-data-generator.git"
  },
  "devDependencies": {
    "@advanced-rest-client/eslint-config": "^1.1.4",
    "@advanced-rest-client/prettier-config": "^0.1.0",
    "@advanced-rest-client/testing-karma-sl": "^1.1.0",
    "@open-wc/testing": "^2.4.2",
    "@open-wc/testing-karma": "^3.2.24",
    "@polymer/gen-typescript-declarations": "^1.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "lit-html": "^1.1.2",
    "sinon": "^8.0.2",
    "deepmerge": "^4.2.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  },
  "scripts": {
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:legacy": "karma start --legacy --coverage",
    "test:legacy:watch": "karma start --legacy --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --legacy --coverage"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
